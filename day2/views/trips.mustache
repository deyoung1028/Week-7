                <input type = "hidden" value = {{tripID}} name = "tripID">
                 <button type = "submit">Delete Trip!</button>
                <div class="card-group">
                <div class="card">
                <img src="{{imageURL}}" class="card-img-top" alt="...">
                 <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                    <p class="card-text"> Date of Departure:{{dateofDeparture}}</p>
                    <p class="card-text"> Date of Return:{{dateofReturn}}</p>
                    
            </form>
                 {{/allTrips}}   
            </div>
           

  </div>
  </div>
</div>
